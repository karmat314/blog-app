<% if current_user %>
  <p>
    Logged in as <strong><%= current_user.username %></strong>
    <%= button_to "Logout", logout_path, method: :delete %>
  </p>
<% end %>


<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
